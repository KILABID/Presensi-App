<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.admin.edit_user.EditUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="30dp"
        android:paddingHorizontal="20dp">

        <com.murad.presensi.custom_view.CustomEditText
            android:id="@+id/editTextEmailEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/rectangle_edit_text"
            android:textColor="@color/textField"
            android:hint="Alamat Email"/>

        <Button
            android:id="@+id/buttonKirimReset"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_button"
            android:text="Kirim Reset Password"
            android:minHeight="48dp"/>

    </LinearLayout>

</FrameLayout>